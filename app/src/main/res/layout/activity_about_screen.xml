<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color"
    android:fitsSystemWindows="true">

    <!-- Green Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-Hike"
            android:textColor="@color/main_color"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the App"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- White Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- ScrollView to make the entire content scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <!-- App Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="24dp"
                    android:paddingVertical="28dp"
                    android:paddingHorizontal="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#10000000"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hiker Management"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:id="@+id/tvVersion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Version 1.0.0"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#666666"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your ultimate companion for tracking and managing hiking adventures. Plan your hikes, record observations, and explore new trails with ease."
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#666666"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Share Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="32dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="24dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#10000000"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_bg_base"
                            android:backgroundTint="#E8F5E9"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¤"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Share with Friends"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="18sp"
                            android:textColor="#999999"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Information Links Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="4dp" />

                    <!-- Website -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/layoutWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="20dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Visit Our Website"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=">"
                                android:textSize="18sp"
                                android:textColor="#999999"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Privacy Policy -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/layoutPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="20dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Privacy Policy"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=">"
                                android:textSize="18sp"
                                android:textColor="#999999"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Terms of Service -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/layoutTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="20dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Terms of Service"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=">"
                                android:textSize="18sp"
                                android:textColor="#999999"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Footer -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by Kyaw Zayar Tun Â© 2025 Hiker Management App. All rights reserved."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:paddingVertical="32dp"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Green Bottom Section with Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="vertical">

        <!-- Bottom Navigation Tab Bar -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:menu="@menu/bottom_nav_menu"
            android:background="@color/white"
            app:elevation="0dp"
            app:itemRippleColor="@android:color/transparent"
            app:itemBackground="@android:color/transparent"
            app:itemIconTint="@color/bottom_nav_icon_color"
            app:itemTextColor="@color/bottom_nav_icon_color"
            app:labelVisibilityMode="labeled"
            android:theme="@style/Theme.MaterialComponents.Light" />
    </LinearLayout>
</LinearLayout>