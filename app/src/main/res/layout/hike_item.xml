<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:background="@android:color/transparent"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="12dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/hikeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hike Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/viewDetailsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye_line"
                android:tint="@color/gray"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/map_line"
                android:tint="@color/gray"/>

            <TextView
                android:id="@+id/hikeLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/calendar_line"
                android:tint="@color/gray" />

            <TextView
                android:id="@+id/hikeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Length -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/pin_distance_line"
                    android:tint="@color/gray" />

                <TextView
                    android:id="@+id/hikeLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 km"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Difficulty -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/stairs_line"
                    android:tint="@color/gray" />

                <TextView
                    android:id="@+id/hikeDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Parking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/parking_box_line"
                    android:tint="@color/gray" />

                <TextView
                    android:id="@+id/hikeParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Observations Section -->
        <LinearLayout
            android:id="@+id/observationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="#f8f9fa"
            android:visibility="gone" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>