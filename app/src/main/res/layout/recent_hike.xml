<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#08000000"
    app:strokeWidth="0.3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hike Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Location and Distance with icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/map_line"
                        android:contentDescription="Location"
                        android:tint="@color/gray"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/hikeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/pin_distance_line"
                        android:contentDescription="Distance"
                        android:tint="@color/gray"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/hikeDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 km"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/parking_box_line"
                        android:contentDescription="Parking"
                        android:tint="@color/gray"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/hikeParking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parking info"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <!-- Difficulty and Date with icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/stairs_line"
                        android:contentDescription="Difficulty"
                        android:tint="@color/gray"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/hikeDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty"
                        android:textSize="10sp"
                        android:background="@color/success_color"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/calendar_line"
                        android:contentDescription="Date"
                        android:tint="@color/gray"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/hikeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 days ago"
                        android:textSize="10sp"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Eye icon for details -->
            <ImageView
                android:id="@+id/viewDetailsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye_line"
                android:tint="@color/gray"
                android:contentDescription="View Details" />
        </LinearLayout>

        <!-- Observations section with icon -->
        <LinearLayout
            android:id="@+id/observationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp" >

            <!-- Observation header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/leaf_line"
                    android:contentDescription="Observations"
                    android:tint="@color/gray"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observations"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>