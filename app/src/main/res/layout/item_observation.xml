<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp" >

    <!-- Observation Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Observation Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/observationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observation text"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/observationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 12:00 PM"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/observationComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional comments"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btnEditObservation"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_box_line"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#2196F3"
                android:padding="8dp"
                android:contentDescription="Edit observation"
                android:layout_marginEnd="8dp" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDeleteObservation"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/bin_line"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#F44336"
                android:padding="8dp"
                android:contentDescription="Delete observation" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>