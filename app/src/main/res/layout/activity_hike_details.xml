<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4">

    <!-- Fixed Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left_line"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#666666"
            android:padding="8dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hike Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hike Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:padding="20dp">

                <!-- Header with Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24px"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hike Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/hikeStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_planned_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="5dp"
                        android:text="PLANNED"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Hike Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NAME"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeNameText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hike Name"
                                android:textSize="16sp"
                                android:textColor="#222222"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Location -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="LOCATION"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeLocationText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textSize="15sp"
                                android:textColor="#222222" />
                        </LinearLayout>

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeDateText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textSize="15sp"
                                android:textColor="#222222" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <!-- Difficulty -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DIFFICULTY"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeDifficultyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Difficulty"
                                android:textSize="15sp"
                                android:textColor="#222222" />
                        </LinearLayout>

                        <!-- Parking -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PARKING"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeParkingText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Parking"
                                android:textSize="15sp"
                                android:textColor="#222222" />
                        </LinearLayout>

                        <!-- Length -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="LENGTH"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/hikeLengthText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0.0 km"
                                android:textSize="15sp"
                                android:textColor="#222222" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- Route Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ROUTE TYPE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/hikeRouteTypeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Route Type"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>

                <!-- Completed Date -->
                <LinearLayout
                    android:id="@+id/completedDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COMPLETED"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/hikeCompletedDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed Date"
                        android:textSize="15sp"
                        android:textColor="#222222" />
                </LinearLayout>

                <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/hikeDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No description provided"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>

                <!-- Notes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADDITIONAL NOTES"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/hikeNotesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No notes provided"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Observations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:padding="24dp">

                <!-- Observations Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Observations"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/observationsCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:background="@drawable/count_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>

                <!-- Observations List -->
                <LinearLayout
                    android:id="@+id/observationsListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- No Observations State -->
                <LinearLayout
                    android:id="@+id/noObservationsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingHorizontal="40dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No observations recorded"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:drawablePadding="12dp"
                        android:drawableTop="@drawable/ic_observation_empty" />
                </LinearLayout>

                <!-- Add Observation Button -->
                <LinearLayout
                    android:id="@+id/btnAddObservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/add_circle_fill"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New Observation"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editHikeButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Edit Hike"
                    android:backgroundTint="@color/main_color"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteHikeButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Delete Hike"
                    android:backgroundTint="@color/error_color"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>