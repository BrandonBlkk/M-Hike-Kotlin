<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HikerManagementApplication">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Hike Activity -->
        <activity
            android:name=".AddHikeActivity"
            android:exported="true" />

        <!-- Hike List Activity -->
        <activity
            android:name=".HikeListActivity"
            android:exported="false" />

        <!-- Add Observation Activity -->
        <activity
            android:name=".AddObservationActivity"
            android:exported="true" />

        <!-- Hike Details Activity -->
        <activity
            android:name=".HikeDetailsActivity"
            android:exported="true" />

        <!-- Edit Hike Activity -->
        <activity
            android:name=".EditHikeActivity"
            android:exported="false" />

        <!-- Edit Observation Activity -->
        <activity
            android:name=".EditObservationActivity"
            android:exported="false" />

        <!-- Weather Forecast Activity -->
        <activity
            android:name=".WeatherForecastActivity"
            android:exported="true" />
    </application>

</manifest>